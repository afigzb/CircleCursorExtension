{
  "manifest_version": 3,
  "name": "Circle Cursor Effect",
  "version": "1.0",
  "description": "A beautiful circle cursor effect for your browser",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 